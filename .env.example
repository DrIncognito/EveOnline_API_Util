# EVE Online API Configuration
# Copy this file to .env and fill in your application details

# EVE Online Application Credentials
# Get these from https://developers.eveonline.com/applications
EVE_CLIENT_ID=your_client_id_here
EVE_CLIENT_SECRET=your_client_secret_here

# OAuth2 Redirect URI (must match your application settings)
EVE_REDIRECT_URI=http://localhost:8000/callback

# ESI Scopes (comma-separated list)
# See https://esi.evetech.net/ui/ for available scopes
EVE_SCOPES=esi-characters.read_corporation_history.v1,esi-wallet.read_character_wallet.v1,esi-skills.read_skills.v1,esi-skills.read_skillqueue.v1,esi-location.read_location.v1,esi-location.read_ship_type.v1,esi-location.read_online.v1,esi-assets.read_assets.v1,esi-bookmarks.read_character_bookmarks.v1,esi-contacts.read_contacts.v1,esi-fleets.read_fleet.v1,esi-fleets.write_fleet.v1

# Token Storage File
EVE_TOKEN_FILE=tokens.json

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
